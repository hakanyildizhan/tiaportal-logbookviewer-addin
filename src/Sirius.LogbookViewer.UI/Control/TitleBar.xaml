<UserControl x:Class="Sirius.LogbookViewer.UI.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sirius.LogbookViewer.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600"
             VerticalAlignment="Stretch"
             FontFamily="{Binding FontFamily}">

    <Grid Style="{DynamicResource WindowTitleBar}" 
          VerticalAlignment="Stretch">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding WindowTitle, FallbackValue=Window Title}"
                   FontSize="14"
                   VerticalAlignment="Center"/>

    </Grid>
</UserControl>
